<div style="background-color: #F0F8FF" id="bill_form">
  <br><br>
  <div class="container" style="background-color: white">
    <h4>Products</h4>

    <%= form_with(url: "/products", method: "get") do |form| %>
      <%= form.search_field :email_id, placeholder: "Customer Email", value: params[:product_name] %>
      <%= form.date_field :from_date, value: params[:from_date] %>
      <%= form.date_field :to_date, value: params[:to_date] %>
      <%= form.submit "Search", class: "btn btn-sm btn-secondary" %>
      <% if params[:email_id] and params[:email_id] != "" or params[:from_date] and params[:to_date] %>
        <%= link_to "Show all", bills_path, class: "btn btn-sm btn-secondary" %>
      <% end %>
      <%= link_to "Bills Section", bills_path, class: "btn btn-sm btn-secondary" %>
      <%= link_to "Add New Product", new_product_path, class: "btn btn-sm btn-secondary" %>
    <% end %>
    <br>

    <table class="table table-hover">
      <thead class="table-dark table-active">
      <tr>
        <th></th>
        <th>Name</th>
        <th>Price</th>
        <th>Tax</th>
        <th>Available Quantity</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td><%= product.tax %> %</td>
          <td><%= product.available_quantity %></td>
          <td><%= link_to 'Show', product %></td>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Delete', product, method: :delete %></td>

        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <br>
</div>
