<%= form_with(model: product, class: "row g-3") do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this @product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-12">
    <%= form.label :name, style: "display: block", class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div>
    <%= form.label :price, style: "display: block", class: "form-label" %>
    <%= form.number_field :price, class: "form-control" %>
  </div>

  <div>
    <%= form.label :tax, style: "display: block", class: "form-label" %>
    <%= form.number_field :tax, class: "form-control" %>
  </div>

  <div>
    <%= form.label :available_quantity, style: "display: block", class: "form-label" %>
    <%= form.number_field :available_quantity, class: "form-control" %>
  </div>

  <div>
    <%= form.submit "Create Product", class: "btn btn-secondary" %>
    <%= link_to "Cancel", products_path, class: "btn btn-secondary" %>
  </div>
<% end %>