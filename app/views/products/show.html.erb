<div style="background-color: #F0F8FF">
  <br><br>
  <div class="container" style="background-color: white">
    <h4>Product Detail</h4>

    <div id="<%= dom_id @product %>">
      <p>
        <strong>Name:</strong>
        <%= @product.name %>
      </p>

      <p>
        <strong>Price:</strong>
        <%= @product.price %>
      </p>

      <p>
        <strong>Tax:</strong>
        <%= @product.tax %>
      </p>

      <p>
        <strong>Available Quantity:</strong>
        <%= @product.available_quantity %>
      </p>

    </div>
    <br>

    <b>Billing Last 3 Bill</b> <%= link_to "Back to index", products_path, class: "btn btn-sm" %>
    <br>

    <table class="table table-hover">
      <thead class="table-dark table-active">
      <tr>
        <th></th>
        <th>Customer Email</th>
        <th>Purchased Date</th>
        <th>Total Price</th>
        <th>Purchased Product count</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @product.bills.limit(3).each do |bill| %>
        <tr>
          <td><%= bill.id %></td>
          <td><%= bill.customer_email %></td>
          <td><%= bill.created_at %></td>
          <td><%= bill.total_price %></td>
          <td><%= bill.sold_products.size %></td>
          <td><%= link_to 'Show', bill %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <br>
</div>